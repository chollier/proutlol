<h1>Editing post</h1>

<% form_for @post, :url => admin_post_path do |f| %>
  <%= f.error_messages %>

  <%= f.label :title, "Titre" %><br />
  <%= f.text_field :title %><br />

  <%= f.label :content, "Contenu" %><br />
  <%= f.text_area :content %><br />

  <p>
    <%= f.submit 'Editer' %>
  </p>
<% end %>

<%= link_to 'Back', admin_posts_path %>